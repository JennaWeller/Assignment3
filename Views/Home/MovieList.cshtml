@{
    ViewBag.Title = "Movie Collection";
    ViewBag.Header = "Movie Collection";
}
@model IEnumerable<Assignment3.Models.MovieResponse>
<!--table for the form values, listing out the movie collection-->
<div class="right_result">
    <h2> Here are the movies currently on your movie list</h2>
    <table id="order_table" class="display">
        <thead>
            <tr><th><strong> Category</strong> </th><th><strong> Title </strong></th><th><strong> Year</strong> </th><th><strong> Director</strong> </th><th><strong> Rating </strong> </th><th><strong> Edited</strong> </th><th><strong> Lent To </strong></th><th><strong> Notes </strong></th></tr>
        </thead>
        <tbody>
            @foreach (Assignment3.Models.MovieResponse x in Model)
            {
                <tr>
                    <!--grabbing the values from the form and outputting them in rows/columns -->
                    <td> @x.Category</td>
                    <td> @x.Title</td>
                    <td> @x.Year</td>
                    <td> @x.Director</td>
                    <td> @x.Rating</td>
                    <td> @x.Edited</td>
                    <td> @x.Lent</td>
                    <td> @x.Notes</td>
                </tr>
            }
        </tbody>
    </table>
</div>